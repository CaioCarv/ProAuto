@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<p>Login Associado</p>

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="login">CPF</label>
        <input type="int" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="senha" class="form-label">Placa</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" oninput="this.value = this.value.toUpperCase()">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <br />
    <button type="submit" class="btn btn-primary w-100">Entrar</button>
</form>